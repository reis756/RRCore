<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogTheme.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogTheme.Button</item>
        <item name="buttonBarNeutralButtonStyle">@style/AlertDialogTheme.Button</item>
    </style>

    <style name="AlertDialogTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/system_white</item>
        <item name="android:background">@color/system_white</item>

        <item name="cornerRadius">30dp</item>
        <item name="android:textSize">10sp</item>
    </style>
</resources>
